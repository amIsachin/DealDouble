
@{
    ViewBag.Title = "Create";
}

<h2>Create Autions</h2>

<form id="createForm">
    <label>Title</label>
    <input type="text" name="Title" />
    <br />

    <label>Description</label>
    <input type="text" name="Description" />
    <br />

    <label>ActualAmount</label>
    <input type="number" name="ActualAmount" />
    <br />

    <label>StartingTime</label>
    <input type="date" name="StartingTime" />
    <br />

    <label>EndingTime</label>
    <input type="date" name="EndingTime" />
    <br />

    <button type="button" id="saveBtn" >Save</button>
</form>


<script type="text/javascript">
    $(document).ready(function () {
        $('#saveBtn').click(function () {
            $.ajax({
                type: 'POST',
                url: '/Auctions/Create',
                data: $('#createForm').serialize()
            })
                .done(function (response) {
                    debugger;
                    $('#listingArea').html(response);
                })
                .fail(function () {
                })
        })

    });  //--> Here is close Document ready function().
</script>