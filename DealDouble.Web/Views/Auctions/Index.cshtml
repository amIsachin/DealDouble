@model List<DealDouble.Entities.Auction>

@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>

<div class="listingArea">
    <table class="table">
        <thead>
            <Tr>
                <th>Title</th>
                <th>Description</th>
                <th>Actual Amount</th>
                <th>Starting Time</th>
                <th>Ending Time</th>
                <th>Auctions</th>
            </Tr>
        </thead>
        <tbody>
            @foreach (var auction in Model)
            {
                <tr>
                    <td>@auction.Title</td>
                    <td>@auction.Description</td>
                    <td>@auction.ActualAmount</td>
                    <td>@auction.StartingTime</td>
                    <td>@auction.EndingTime</td>

                    <td>
                        <button class="editButton" data-id="@auction.ID">Edit</button>
                        <button class="deleteButton" data-id="@auction.ID">Delete</button>
                    </td>
                </tr>
            }
        </tbody>
    </table>

    <div>
        <button type="button" id="createButton">Create New Auction</button>
    </div>


    <div id="contentArea">

    </div>

    <script type="text/javascript">
        $(document).ready(function () {
            $('#createButton').click(function () {
                $.ajax({
                    method: 'GET',
                    url: '/Auctions/Create/',
                })
                    .done(function (response) {
                        debugger;
                        $('#contentArea').html(response);
                    })
            });

            //--> Edit Button Functionallity.
            $('.editButton').click(function () {
                debugger;
                $.ajax({
                    method: 'GET',
                    url: '/Auctions/Edit/',
                    data: {
                        ID: $(this).attr('data-id')
                    }
                })
                    .done(function (response) {
                        debugger;
                        $('#contentArea').html(response);
                    })
            });

            //--> Delete Button Functionallity.
            $('.deleteButton').click(function () {
                if (confirm('Are you sure you want to delete this Auction??')) {
                    $.ajax({
                        type: 'POST',
                        url: '/Auctions/Delete',
                        data: {
                            ID: $(this).attr('data-id')
                        }
                    })
                        .done(function (response) {
                            debugger;
                            $('#listingArea').html(response);
                        })
                        .fail(function () {
                        })
                }
            });

        })  //--> Here is close Document ready function().
    </script>

</div>

